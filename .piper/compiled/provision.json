{
    "actions": [
        {
            "Url": {
                "after": {
                    "scripts": [
                        "install.sh"
                    ]
                },
                "from": {
                    "location": "https://download.virtualbox.org/virtualbox//VBoxGuestAdditions_.iso"
                },
                "to": "/tmp"
            },
            "phase": "dependency"
        },
        {
            "Url": {
                "after": {
                    "inlines": [
                        "chmod u+x /opt/piper/guest && /opt/piper/guest provision abcdefgh s"
                    ]
                },
                "from": {
                    "location": "https://s3.eu-west-3.amazonaws.com/xbee.repository/providers/linux_amd64/guest.tar.gz"
                },
                "to": "/opt/piper",
                "unpack": true
            },
            "phase": "dependency"
        },
        {
            "Shell": {
                "inlines": [
                    "nmcli connection add type ethernet con-name pipernet ifname eth1"
                ]
            },
            "labels": {
                "osid": [
                    "centos"
                ]
            },
            "phase": "shell"
        },
        {
            "Shell": {
                "scripts": [
                    "network_ubuntu.sh"
                ]
            },
            "labels": {
                "osid": [
                    "ubuntu"
                ]
            },
            "phase": "shell"
        }
    ],
    "async": false,
    "container": {
        "create": true
    }
}
